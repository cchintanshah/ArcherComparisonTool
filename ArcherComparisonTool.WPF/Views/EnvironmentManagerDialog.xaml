<Window x:Class="ArcherComparisonTool.WPF.Views.EnvironmentManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Manage Environment" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Display Name:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="2" Text="URL:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
        
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Instance Name:" Margin="0,0,0,5"/>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding InstanceName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Grid.Row="0" Grid.Column="2" Text="User Domain (optional):" Margin="0,0,0,5"/>
            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding UserDomain, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" Margin="0,0,0,5"/>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Grid.Row="1" Grid.Column="2" x:Name="PasswordBox"/>
        </Grid>
        
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Padding="20,8" Margin="5" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Padding="20,8" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

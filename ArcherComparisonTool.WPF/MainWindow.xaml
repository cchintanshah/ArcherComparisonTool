<Window x:Class="ArcherComparisonTool.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:viewmodels="clr-namespace:ArcherComparisonTool.WPF.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Archer Environment Comparison Tool" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ToolbarButtonStyle">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBarTray Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <ToolBar>
                <Button Content="➕ Add Environment" Command="{Binding AddEnvironmentCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="✏ Edit" Command="{Binding EditEnvironmentCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="🗑 Delete" Command="{Binding DeleteEnvironmentCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
            </ToolBar>
        </ToolBarTray>
        
        <!-- Environment Selection -->
        <Grid Grid.Row="1" Margin="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Source:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" ItemsSource="{Binding Environments}" 
                      SelectedItem="{Binding SourceEnvironment}"
                      DisplayMemberPath="DisplayName"
                      Height="32"/>
            
            <TextBlock Grid.Column="3" Text="Target:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="4" ItemsSource="{Binding Environments}" 
                      SelectedItem="{Binding TargetEnvironment}"
                      DisplayMemberPath="DisplayName"
                      Height="32"/>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="⚙ Configure Collection" 
                    Command="{Binding ConfigureCollectionCommand}"
                    Padding="15,8" Margin="5" FontSize="14"/>
            <Button Content="🔍 Compare Environments" 
                    Command="{Binding CompareCommand}"
                    Padding="20,8" Margin="5" FontSize="14"
                    Style="{StaticResource AccentButtonStyle}"
                    IsEnabled="{Binding IsComparing, Converter={StaticResource InverseBooleanConverter}}"/>
        </StackPanel>
        
        <!-- Progress -->
        <StackPanel Grid.Row="3" Margin="20,0,20,10" VerticalAlignment="Top"
                    Visibility="{Binding IsComparing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Height="8" Value="{Binding ProgressPercentage}" Maximum="100" IsIndeterminate="{Binding IsComparing}"/>
            <TextBlock Text="{Binding ProgressMessage}" Margin="0,5" TextAlignment="Center" FontStyle="Italic"/>
        </StackPanel>
        
        <!-- Results -->
        <TabControl Grid.Row="3" Margin="20,10">
            <!-- Tab 1: Not in Target (Source Only items) -->
            <TabItem Header="{Binding TargetOnlyHeader}">
                <DataGrid ItemsSource="{Binding TargetOnlyResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding ComparisonType}" Width="120"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="250"/>
                        <DataGridTextColumn Header="Identifier" Binding="{Binding ItemIdentifier}" Width="200"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- Tab 2: Not in Source (Target Only items) -->
            <TabItem Header="{Binding SourceOnlyHeader}">
                <DataGrid ItemsSource="{Binding SourceOnlyResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding ComparisonType}" Width="120"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="250"/>
                        <DataGridTextColumn Header="Identifier" Binding="{Binding ItemIdentifier}" Width="200"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- Tab 3: Mismatches -->
            <TabItem Header="{Binding MismatchHeader}">
                <DataGrid ItemsSource="{Binding MismatchResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding ComparisonType}" Width="120"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="250"/>
                        <DataGridTextColumn Header="Identifier" Binding="{Binding ItemIdentifier}" Width="200"/>
                        <DataGridTextColumn Header="Property" Binding="{Binding PropertyName}" Width="150"/>
                        <DataGridTextColumn Header="Source Value" Binding="{Binding SourceValue}" Width="150"/>
                        <DataGridTextColumn Header="Target Value" Binding="{Binding TargetValue}" Width="150"/>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#FFF2CC"/>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </TabItem>
            
            <!-- Tab 4: Matched -->
            <TabItem Header="{Binding MatchedHeader}">
                <DataGrid ItemsSource="{Binding MatchedResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding ComparisonType}" Width="120"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="250"/>
                        <DataGridTextColumn Header="Identifier" Binding="{Binding ItemIdentifier}" Width="200"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#E2F0D9"/> <!-- Light Green -->
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Results: "/>
                    <Run Text="{Binding ComparisonResults.Count, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="📊 Export to Excel" Command="{Binding ExportCommand}" 
                        IsEnabled="{Binding ComparisonReport, Converter={StaticResource NullToBooleanConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
